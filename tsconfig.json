{
    "sourceMap": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "lib": ["es5", "es6", "es2021", "dom", "dom.iterable"],
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "typeRoots": ["resources/ts/@types", "node_modules/@types"],
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/assets/*"]
        }
    },
    "include": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
    "exclude": ["node_modules"],
    "compileOnSave": false,
    "experimentalDecorators": true
}
